---
import type { CollectionEntry } from "astro:content";
import { getPath } from "@/utils/getPath";
import { slugifyStr } from "@/utils/slugify";
import { getFirstImage } from "@/utils/getFirstImage";
import Datetime from "./Datetime.astro";

type Props = {
  post: CollectionEntry<"blog">;
  variant?: "featured" | "list";
};

const { post, variant = "list" } = Astro.props;
const { title, description, category, ogImage, ...datetimeProps } = post.data;
const ogSrc = typeof ogImage === "string" ? ogImage : ogImage?.src;
const thumbnail = ogSrc ?? getFirstImage(post.body);
const href = getPath(post.id, post.filePath);
---

{variant === "featured" ? (
  <a
    href={href}
    class="card-transition group flex flex-col overflow-hidden rounded-xl border border-border bg-card-bg shadow-[0_2px_16px_rgba(0,0,0,0.06)] hover:shadow-[0_8px_32px_rgba(0,0,0,0.10)] lg:col-span-3"
  >
    {/* Thumbnail */}
    <div class="aspect-[16/9] overflow-hidden">
      {thumbnail ? (
        <img
          src={thumbnail}
          alt={title}
          class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
          loading="lazy"
        />
      ) : (
        <div class="flex h-full w-full items-center justify-center bg-accent/10">
          <span class="text-xl font-semibold text-accent/40">
            {category ?? "Blog"}
          </span>
        </div>
      )}
    </div>
    {/* Content */}
    <div class="flex flex-1 flex-col p-5">
      {category && (
        <span class="mb-2 text-xs font-semibold uppercase tracking-wider text-accent-gold">
          {category}
        </span>
      )}
      <h3
        class="mb-2 text-xl font-semibold leading-snug group-hover:text-accent transition-colors"
        style={{ viewTransitionName: slugifyStr(title.replaceAll(".", "-")) }}
      >
        {title}
      </h3>
      <Datetime {...datetimeProps} class="mb-2 text-sm opacity-60" />
      <p class="line-clamp-3 text-sm opacity-75">{description}</p>
    </div>
  </a>
) : (
  <a
    href={href}
    class="group flex flex-row items-start gap-4 border-b border-border py-4 last:border-b-0"
  >
    {/* Small thumbnail */}
    <div class="h-20 w-20 shrink-0 overflow-hidden rounded-lg">
      {thumbnail ? (
        <img
          src={thumbnail}
          alt={title}
          class="h-full w-full object-cover"
          loading="lazy"
        />
      ) : (
        <div class="flex h-full w-full items-center justify-center bg-muted">
          <span class="text-sm font-semibold text-foreground/30">
            {category?.charAt(0) ?? "B"}
          </span>
        </div>
      )}
    </div>
    {/* Text */}
    <div class="flex min-w-0 flex-1 flex-col">
      {category && (
        <span class="mb-1 text-xs font-semibold uppercase tracking-wider text-accent-gold">
          {category}
        </span>
      )}
      <h3 class="mb-1 line-clamp-1 text-sm font-semibold leading-snug group-hover:text-accent transition-colors">
        {title}
      </h3>
      <Datetime {...datetimeProps} class="text-xs opacity-50" />
    </div>
  </a>
)}

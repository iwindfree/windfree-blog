---
import type { MarkdownLayoutProps } from "astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Layout from "./Layout.astro";
import { SITE } from "@/config";

type Props = MarkdownLayoutProps<{ title: string }>;

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <Header />

  {/* Full-width hero with gradient overlay */}
  <div class="relative">
    <img
      src="/images/about/about-hero.jpeg"
      alt="About"
      class="w-full max-h-[560px] object-cover object-[center_70%]"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-background/80 via-transparent to-transparent"></div>
    <div class="absolute bottom-8 left-0 right-0 text-center">
      <h1 class="text-3xl font-bold text-white drop-shadow-lg sm:text-4xl">About</h1>
      <p class="mt-2 text-sm text-white/80 drop-shadow">Notes for a Some day</p>
    </div>
  </div>

  <main id="main-content" class="mx-auto w-full max-w-app px-4 py-12">
    <section
      id="about"
      class="app-prose mb-28 max-w-app [word-break:keep-all] prose-img:border-0 prose-img:rounded-xl prose-img:shadow-[0_2px_16px_rgba(0,0,0,0.08)]"
    >
      <slot />
    </section>
  </main>
  <Footer />
</Layout>

---
import { getCollection } from "astro:content";
import type { GetStaticPathsOptions } from "astro";
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import CardBlog from "@/components/CardBlog.astro";
import Pagination from "@/components/Pagination.astro";
import getUniqueCategories from "@/utils/getUniqueCategories";
import getPostsByCategory from "@/utils/getPostsByCategory";
import { SITE } from "@/config";

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const posts = await getCollection("blog");
  const categories = getUniqueCategories(posts);

  return categories.flatMap(category => {
    const categoryPosts = getPostsByCategory(posts, category);

    return paginate(categoryPosts, {
      params: { category },
      pageSize: SITE.postPerPage,
    });
  });
}

const { category } = Astro.params;
const { page } = Astro.props;
---

<Layout title={`Category: ${category} | ${SITE.title}`}>
  <Header />
  <Main
    pageTitle={[`Category:`, `${category}`]}
    titleTransition={category ?? ""}
    pageDesc={`"${category}" 카테고리의 모든 글.`}
  >
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {page.data.map(data => <CardBlog post={data} />)}
    </div>
  </Main>

  <Pagination {page} />

  <Footer noMarginTop={page.lastPage > 1} />
</Layout>
